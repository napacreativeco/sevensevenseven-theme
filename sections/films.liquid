<style>

.films-container {
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
            -ms-flex-direction: column;
                flex-direction: column;
        -webkit-box-align: center;
            -ms-flex-align: center;
                align-items: center;
        width: 100%;
        padding: 80px 0 40px 0;
        min-height: 60vh;
    }
    .films-container ul {
        list-style: none;
        margin: 0;
        padding: 0;
        text-align: center;
        width: 100%;
    }
    .films-container li {
        margin: 20px 0;
    }
    .films-container li p {
      text-transform: uppercase;
      margin: 0 0 14px 0;
      font-size: 2rem;
    }
    .films-container li a:hover {
      color: var(--red);
    }
    .films-container .video-embed {
      padding: 0 0 20px 0;
    }
    .films-container .video-embed iframe {
      width: 60vw;
      height: 30vw;
    }

    @media screen and (max-width: 767px) {
      .films-container {
        padding: 20px 0 20px 0;
      }
      .films-container .video-embed iframe {
        width: 90vw;
        height: 44vw;
      }
      .films-container li p {
        text-transform: uppercase;
        margin: 0 0 14px 0;
        font-size: 2.5rem;
      }
    }
</style>


<div class="films-container">
    <ul>
        {% for block in section.blocks %}
            {% case block.type %}
                {% when 'film' %}
                    <li class="film-item">
                        <div class="video-embed">
                            {{ block.settings.video_embed }}
                        </div> 
                        <div class="title">
                            <p>{{ block.settings.film_title }}</p>
                            <p>{{ block.settings.artist_name }}</p>
                        </div>
                    </li>
            {% endcase %}
        {% endfor %}
    </ul>
</div>




{% schema %}
{
  "name": "Films",
  "tag": "section",
  "class": "films",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Films"
    }
  ],
  "blocks": [
     {
       "name": "Film",
       "type": "film",
       "settings": [
         {
           "type": "textarea",
           "id": "video_embed",
           "label": "Embed Code"
         },
         {
            "type": "text",
            "id": "film_title",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "artist_name",
            "label": "Artist"
          }
       ]
     }
   ]
}
{% endschema %}
